<div>
    <label>Title</label>
    <input type="text" name="title" value="<%= movie.title %>">
</div>
<div>
    <label>Director</label>
    <select name="director">
        <% directors.forEach(director => { %>
            <option <%= director.id == movie.director ? 'selected' : '' %> label="<%= director.firstName + ' ' + director.lastName%>" value="<%=director.id %>">
        <% }) %>
    </select>
</div>
<div>
<label>Release date</label>
    <input type="date" name="releaseDate" 
        value="<%= movie.releaseDate == null ? '' : movie.releaseDate.toISOString().split('T')[0] %>">
</div>
<div>
    <label>Duration</label>
    <input type="number" min="1" name="duration" value="<%= movie.duration %>">
</div>
<div>
    <label>Poster</label>
    <input type="file" name="poster" class="filepond" >
</div>
<div>
    <label>Description</label>
    <textarea name="description">
        <%= movie.description %>
    </textarea>
</div>